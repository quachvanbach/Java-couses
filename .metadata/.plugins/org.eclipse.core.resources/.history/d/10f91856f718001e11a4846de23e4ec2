package main;

import java.util.Scanner;

public class LapTrinhMiniGame {
	public static void main(String[] args) {
		double taiKhoanNguoiChoi = 5000;
		Scanner sc = new Scanner(System.in);
		String luaChon = "Y";
		do {
		System.out.println("------------ Mời bạn lựa chọn ------------");
		System.out.println("Chọn Y để tiếp tục chơi, Chọn N để thoát!");
		luaChon = sc.next();
		
		if (luaChon == "Y") {
			System.out.println("*** Bắt đầ chơi ***");
			System.out.println("***** Tài khoản của bạn là: "+taiKhoanNguoiChoi+" bạn muốn cược bao nhiêu? ***");
			double datCuoc = 0;
			do {
				System.out.println("*****  Đặt cược ( 0 < số tiền cươc <= "+ taiKhoanNguoiChoi+" )" );
				datCuoc = sc.nextDouble();
			} while (datCuoc <=0 || datCuoc>taiKhoanNguoiChoi);
			
			
		}
		} while (luachon == "N");
	}
}
