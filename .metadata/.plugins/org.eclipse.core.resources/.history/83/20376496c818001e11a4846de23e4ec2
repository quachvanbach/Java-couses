import java.util.Arrays;

public class LamViecVoiMang {
	public static void main(String[] args) {
		int[] soNguyen = new int[] { 1, 2, 3, 9, 8, 7, 6 };
		int[] soNguyen_1 = new int[15];

		System.out.println("a khoi tao: "+ soNguyen.toString(soNguyen));
		
		//Hàm sort: Sắp xếp tăng dần:
		Arrays.sort(soNguyen);
		System.out.println("a sau khi duoc sap xep: "+ Arrays.toString(soNguyen));
		
		// Hàm binarySearch: hàm tìm kiếm:
		System.out.println(Arrays.binarySearch(soNguyen, 8));
		System.out.println(Arrays.binarySearch(soNguyen, 8));
	}
}
