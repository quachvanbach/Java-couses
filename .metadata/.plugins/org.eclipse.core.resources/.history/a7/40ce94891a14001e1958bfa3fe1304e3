
public class TongCongHoaDon {
	public static void main(String[] args) {
		HoaDonCaPhe hd = new HoaDonCaPhe("Trung Nguyen", 100, 1.5);
		System.out.println("Tổng tiền: " + hd.tinhTongTien());
		System.out.println("Khối lượng này lớn hơn 2kg không? " + hd.kiemTraKhoiLuongLonHon(2));
		System.out.println("Khối lượng này lớn hơn 1kg không? " + hd.kiemTraKhoiLuongLonHon(1));
		System.out.println();
	}
}
