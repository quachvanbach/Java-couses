
public class ChuyenDoiKieuDuLieu {
	public static void main(String[] args) {
		int a = 100;
		int b = 2;

		System.out.println("a = " + a);
		System.out.println("b= " + b);

		// Ép kiểu ngầm định.
		float c = a;
		float d = b;

		System.out.println("c = " + c);
		System.out.println("d = " + d);

		// Ép kiểu tường minh
		float e = 3.5;
		float f = 9.5;
		
	}
}
